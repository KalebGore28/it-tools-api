{
	"name": "it-tools-api",
	"module": "index.ts",
	"type": "module",
	"engines": {
		"bun": ">=1.0.0"
	},
	"scripts": {
		"start": "bun run dist/server.js",
		"dev": "bunx nodemon --exec bun run src/index.ts",
		"test": "bun test --watch --coverage",
		"bundle": "bun build --target=bun src/index.ts --outfile dist/server.js --minify",
		"deploy": "wrangler deploy --minify src/index.ts",
		"docker": "docker build -t it-tools-api ."
	},
	"devDependencies": {
		"@elysiajs/eden": "^1.3.2",
		"@types/bun": "latest",
		"@types/color": "^4.2.0",
		"@types/diff": "^6.0.0",
		"@types/nearest-color": "^0.4.1",
		"wrangler": "^4.14.4"
	},
	"peerDependencies": {
		"typescript": "^5.7.2"
	},
	"dependencies": {
		"@elysiajs/swagger": "^1.3.0",
		"color": "^4.2.3",
		"color-name-list": "^11.14.0",
		"composerize": "^1.7.2",
		"decomposerize": "^1.4.4",
		"diff": "^7.0.0",
		"elysia": "^1.3.1",
		"logixlysia": "^4.2.7",
		"lorem-ipsum": "^2.0.8",
		"nearest-color": "^0.4.4",
		"ulid": "^2.4.0",
		"uuid": "^11.1.0"
	}
}
